<section class="hero py-16">
    <div class="container-private mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="hero-pizza">
        </div>
    </div>
</section>
<section class="menu container-private mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
    <!-- The row-gap/col-gap property is now updated to gap-y/gap-x - Nitin -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-12 gap-y-16">
        <% pizzas.forEach(pizza => { %>
            <div class="w-full">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">&#8360;.<%= pizza.price %></span>
                        <button class="add-to-cart py-1 px-6 rounded-full flex item-center font-bold" data-pizza='<%= JSON.stringify(pizza) %>'>
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

</section>
